{
  "compilerOptions": {
    "target": "ESNext", 
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./source",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true, 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
  },
  "include": [
    "source/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}