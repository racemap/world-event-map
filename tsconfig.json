{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./source",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "module": "NodeNext"
  },
  "include": [
    "source/**/*"                    // Include all files in the source directory
  ],
  "exclude": [
    "node_modules",                  // Exclude node_modules
    "**/*.spec.ts"                   // Exclude test files if any
  ]
}
  